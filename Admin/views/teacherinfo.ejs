<%-include ("partials/header")-%>

<!-- Main Dashboard -->

<% data.forEach((row,index) =>{ %>


<div class = "fulls">
<main class = "main">
    <div class = "full1">
    <nav class = "horizontal">
        <div class = "tfull">
            <div class = "tfull1">
                <a class = "tfull2" href = " ">
                Pages
                <span class = "tfull3">
                    /
                </span>
                </a>
                <a class = "tfull4" href = "/teachers">
                Teachers
                </a>
            </div>
            <p class = "tfull5">
                <a id = "<%= row.teacher_id %>"class = "tfull6" href = "/teacherinfo/<%= row.teacher_id %>">
                    <%= row.teacher_id %>
                </a>
            </p>
        </div>  
    </nav>

    <!-------Student Card----------->

                <div class = "student">
                    <div class = "student-body">
                        <div class="student-head">
                            <div class = "general-h">
                                <h4 class = "general-title">Personal Information</h4>
                            </div>
                        </div>
                        <div class = "row">
                            <div class = "add">
                                <label class = "add-input">Name:<%= row.Teacher_Name %></label>
                            </div>

                            <div class = "add">
                                <label class = "general-head1">Gender: <%= row.teacher_gender %></label>
                            </div>

                            <div class = "add">
                                <label class = "general-head1">Date Of Birth:                 <%
                                    let date = new Date(row.teacher__dob);
                                    let year = date.getFullYear();
                                    let month = date.getMonth() + 1;
                                    let day = date.getDate();
                                    let formattedDate = `${year}-${month < 10 ? '0' + month : month}-${day < 10 ? '0' + day : day}`;
                                    %>
                                    <%= formattedDate %></label>
                            </div>

                            <div class = "add">
                                <label class = "general-head1">Phone: <%= row.teacher_mobileNo %></label>
                            </div>

                            <div class = "add">
                                <label class = "general-head1">CNIC: <%= row.cnic %></label>
                            </div>

                            <div class = "add">
                                <label class = "general-head1">Address: <%= row.teacher_Address %></label>
                            </div>

                            <div class = "add">
                                <label class = "general-head1">E-Mail: <%= row.teacher_email %></label>
                            </div>
                        </div>
                    </div>
                </div>


                <form action = "/students" method = "get">
                    <div class = "row">
                        <div class = "add2">
                            <button type="submit" class="add2-btn1">Go Back</button>
                        </div>
                    </div>
                </form>
            </div>

            
            </div>
        </div>

    <% }); %>

    

<%-include ("partials/footer")-%>
