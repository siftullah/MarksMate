      <form class = "search-form">
        <div class = "search-form1">
          <div class = "form1">
            <input type="text" id="search-by-rollNo" placeholder="Search by Course Code ..." class="form-control">
          </div>

          <div class = "form2">
            <input type="text" id="search-by-name" placeholder="Search by Course Name ..." class="form-control">
          </div>

          <div class = "form2">
            <input type="text"  id="search-by-batch" placeholder="Search by Credit Hrs ..." class="form-control">
          </div>

          <div class = "form3">
            <button type="submit" id="search-button" class="search-btn">SEARCH</button>
          </div>

        </div>
      </form>

      <div class = "student-table">
        <div class = "student-table1">
          <table class = "student-table2">
            <thead>
              <tr role = "row">
                <th class="sorting_asc" rowspan="1" colspan="1" aria-label="Roll" style="width: 85.8px;">
                    <div class="form-check">
                      <input type="checkbox" class="check">
                      <label class="check-label">#</label>
                    </div>
                </th>
                <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 80.6875px;">Course Code</th>
                <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 80.6875px;">Course Name</th>
                <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 80.6875px;">Course Type</th>
                <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 80.6875px;">Credit Hours</th>
                <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 80.6875px;">Relation</th>
                <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 80.6875px;">Pre-requisite</th>
              </tr>
            </thead>
            <tbody id = "data">
                <% data.forEach((row,index) =>{ %>
                <tr role="row" class= "<%= index % 2 === 0 ? 'even' : 'odd' %>">
                  <td class="sorting_1">
                      <div class="form-check">
                          <input type="checkbox" class="check">
                          <label class="check-label"><%= index + 1%></label>
                      </div>
                  <td style = "padding-top:1rem; padding-bottom:1rem;padding-left:1rem;"><%= typeof row.course_code !== 'undefined' ? row.course_code : '-' %></td>
                  <td class="name" style = "padding-left:1rem;"><%= typeof row.course_name !== 'undefined' ? row.course_name : '-' %></td>
                  <td style = "padding-left:1rem;"> <% if (typeof row.course_type !== 'undefined') { %>
                    <% if (row.course_type === 1) { %>
                        <%= row.course_type %> (theory)
                    <% } else if (row.course_type === 2) { %>
                        <%= row.course_type %> (lab)
                    <% } else { %>
                        <%= row.course_type %>
                    <% } %>
                    <% } else { %>
                        -
                    <% } %>
                  </td>
                  <td style = "padding-left:1rem;"><%= typeof row.credit_hours !== 'undefined' ? row.credit_hours : '-' %></td>
                  <td style = "padding-left:1rem;">    <% if (typeof row.relation !== 'undefined') { %>
                    <% if (row.relation === 1) { %>
                        <%= row.relation %> (core)
                    <% } else if (row.relation === 2) { %>
                        <%= row.relation %> (elective)
                    <% } else { %>
                        <%= row.relation %>
                    <% } %>
                    <% } else { %>
                        -
                    <% } %>
                  </td>
                  <td style = "padding-left:1rem;"><% if (typeof row.pre_requisite === 'undefined' || row.pre_requisite === null || row.pre_requisite === '') 
                  { %>
                    -
                  <% } else { %>
                    <%= row.pre_requisite %>
                  <% } %>
                  </td>
                  </div>                   
                </tr>

                <% })%>
                
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

