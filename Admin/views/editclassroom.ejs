    <!-------Student Card----------->

            <div class = "student">
                <div class = "student-body">
                    <div class="student-head">
                        <div class = "general-h">
                            <h4 class = "general-title">Add Classroom Information</h4>
                        </div>
                    </div>

                <form class= "" action = "/classroom/editclassroom" method = "post">
                    <div class = "row">

                        <div class = "add">
                            <label class = "add-input">Room no</label>
                            <input name = "roomNo" type="text" placeholder="" class="form-control" autocomplete = "off">
                        </div>

                        <div class = "add">
                            <label class = "add-input">Department</label>
                            <select placeholder = "Select" name = "department" class = "form-control">
                              <option value="" disabled selected>Select</option>
                               <% data.forEach(row => {%>
                                  <option value = "<%= row.id %>"><%= row.id %> (<%= row.name_abbreviation %>)</option>
                               <% }); %>
                          </select>                         
                        </div>

                        <div class = "add">
                          <label class = "add-input">Room Type</label>
                          <select placeholder = "Select"name = "roomType" class="form-control">
                            <option value="" disabled selected>Select</option>
                            <option value = "1">1 (Theory)</option>
                            <option value = "2">2 (Lab)</option>
                          </select> 
                        </div>    
                    </div>
                </div>
            </div>

            <div class = "row">
                <div class = "add2">
                    <button type="submit" class="add2-btn">Submit</button>
                    <button type="reset" class="add2-btn1">Reset</button>
                </div>
            </div>

                </div>
            </form>
        </div>
