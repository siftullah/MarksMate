            <div class = "student">
                <div class = "student-body">
                    <div class="student-head">
                        <div class = "general-h">
                            <h4 class = "general-title">Add TimeTable Information</h4>
                        </div>
                    </div>

                <form class= "" action = "/timetable/edittime" method = "post">
                    <div class = "row">

                        <div class = "add">
                            <label class = "add-input">Section ID</label>
                            <select placeholder = "Select" name = "secID" class = "form-control">
                                <option value="" disabled selected>Select</option>
                                 <% data.forEach(row => {%>
                                    <option value = "<%= row.id %>"><%= row.id %> (<%= row.section_name %>  <%= row.course_code %>)</option>
                                 <% }); %>
                            </select> 
                        </div>

                        <div class = "add">
                            <label class = "add-input">Start Time</label>
                            <input name = "startTime" type="text" placeholder="20:00" class="form-control" autocomplete = "off" pattern="^([01]\d|2[0-3]):?([0-5]\d)$" title="Please enter time in 24-hour format (HH:MM)"required>
                        </div>

                        <div class = "add">
                            <label class = "add-input">End Time</label>
                            <input name = "endTime" type="text" placeholder="20:00" class="form-control" autocomplete = "off" pattern="^([01]\d|2[0-3]):?([0-5]\d)$" title="Please enter time in 24-hour format (HH:MM)" required>
                        </div>

                        <div class = "add">
                            <label class = "add-input">Day No.</label>
                            <select placeholder = "Select" name = "dayNo" class="form-control">
                                <option value="" disabled selected>Select</option>
                                <option value = "1">1 (Monday)</option>
                                <option value = "2">2 (Tuesday)</option>
                                <option value = "3">3 (Wednesday)</option>
                                <option value = "4">4 (Thursday)</option>
                                <option value = "5">5 (Friday)</option>
                                <option value = "6">6 (Saturday)</option>
                            </select>
                        </div>

                        <div class = "add">
                            <label class = "add-input">Venue</label>
                            <select placeholder = "Select" name = "venue" class = "form-control">
                                <option value="" disabled selected>Select</option>
                                 <% data1.forEach(row => {%>
                                    <option value = "<%= row.id %>"><%= row.id %> (<%= row.room_no %> <%= row.name_abbreviation %>)</option>
                                 <% }); %>
                            </select> 
                        </div>

                    </div>
                </div>
            </div>

            <div class = "row">
                <div class = "add2">
                    <button type="submit" class="add2-btn">Submit</button>
                    <button type="reset" class="add2-btn1">Reset</button>
                </div>
            </div>

                </div>
            </form>
