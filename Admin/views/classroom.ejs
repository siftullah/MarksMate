<div class = "fulls">
    <main class = "main">
      <div class = "full1">
        <nav class = "horizontal">
          <div class = "tfull">
            <div class = "tfull1">
              <a class = "tfull2" href = " ">
                Pages
                <span class = "tfull3">
                  /
                </span>
              </a>
              <a class = "tfull4" href = "/classroom">
                Classroom
              </a>
            </div>
            <p class = "tfull5">
              <a class = "tfull6" href = "/classroom">
                Classroom
              </a>
            </p>
          </div>  
        </nav>

<!-------Student Card----------->

              <div class = "student">
                <div class = "student-body">
                  <div class="student-head">
                    <div class = "general-h">
                      <h4 class = "general-title">All Classroom Data</h4>
                    </div>
                  </div>


                  <div class = "search-form">
                    <div class = "search-form1">
              
                      <form action = "/classroom/addclassroom" class = "del-form2">
                        <button type="submit" class="search-btn">Add+</button>
                      </form>
              
                      <form class="srch-form1">
                        <button class="delete-btn">Remove-</button>
                      </form>
              
                      <form style = "display: none;" class="del-form2">
                        <button class="src-btn">Show</button>
                      </form>
              
                      <form class="srch-form1">
                        <button class="edit-btn">Edit+/-</button>
                      </form>
                    </div>
              
                    <form action="/classroom" method = "post">
                      <div class = "design-widht">
                        <div class="input-card">
                          <h2 style = "font-weight: 900; font-size: 1.5em; margin-top: 0;">Remove Classroom</h2>
                          <label class="input form_label">
                            <input name = "classID" class="input__field " type="text" placeholder="Enter Classroom ID. ">
                          </label>
                          <div class="button-group">
                            <button class = "send" type = "submit">Send</button>
                            <button class = "reset" type="reset">Reset</button>
                          </div>
                        </div>
                      </div>
                    </form>
              
                    <form style = "display: none;" action="/students/editstudent" method = "get">
                      <div class = "design-widht1">
                        <div class="input-card1">
                          <h2 style = "font-weight: 900; font-size: 1.5em; margin-top: 0;">Edit Classroom</h2>
                          <label class="input">
                            <input name = "classID" class="input__field" type="text" placeholder="Enter Classroom ID. ">
                          </label>
                          <div class="button-group">
                            <button class = "send" type = "submit">Send</button>
                            <button class = "reset" type="reset">Reset</button>
                          </div>
                        </div>
                      </div>
                    </form>
              
                    <form action="/classroom/editclassroom" method = "get">
                      <div class = "design-widht2">
                        <div class="input-card2">
                          <h2 style = "font-weight: 900; font-size: 1.5em; margin-top: 0;">Edit Classroom</h2>
                          <label class="input">
                            <input name = "classID" class="input__field" type="text" placeholder="Enter Classroom ID. ">
                          </label>
                          <div class="button-group">
                            <button class = "send1" type = "submit">Send</button>
                            <button class = "reset" type="reset">Reset</button>
                          </div>
                        </div>
                      </div>
                    </form>
                    
                  </div>
              
                    <form class = "search-form">
                      <div class = "search-form1">
                        <div class = "form1">
                          <input type="text" id="search-by-rollNo" placeholder="Search by ID ..." class="form-control">
                        </div>
              
                        <div class = "form2">
                          <input type="text" id="search-by-name" placeholder="Search by Room No ..." class="form-control">
                        </div>
              
                        <div class = "form2">
                          <input type="text"  id="search-by-batch" placeholder="Search by Room Type ..." class="form-control">
                        </div>
              
                        <div class = "form3">
                          <button type="submit" id="search-button" class="search-btn">SEARCH</button>
                        </div>
              
                      </div>
                    </form>


                  <div class = "student-table">
                    <div class = "student-table1">
                      <table class = "student-table2">
                        <thead>
                          <tr role = "row">
                            <th class="sorting_asc" rowspan="1" colspan="1" aria-label="Roll" style="width: 85.8px;">
                                <div class="form-check">
                                  <input type="checkbox" class="check">
                                  <label class="check-label">#</label>
                                </div>
                            </th>
                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 80.6875px;">ID</th>
                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 80.6875px;">Room no.</th>
                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 80.6875px;">Department</th>
                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 80.6875px;">Room Type</th>
                            
                          </tr>
                        </thead>
                        <tbody id = "data">
                            <% data.forEach((row,index) =>{ %>
                            <tr role="row" class= "<%= index % 2 === 0 ? 'even' : 'odd' %>">
                              <td class="sorting_1">
                                  <div class="form-check">
                                      <input type="checkbox" class="check">
                                      <label class="check-label"><%= index + 1%></label>
                                  </div>
                              <td style = "padding-left:1rem;"><%= typeof row.id !== 'undefined' ? row.id : '-' %></td>
                              <td class="name" style = "padding-left:1rem;"><%= typeof row.room_no !== 'undefined' ? row.room_no : '-' %></td>
                              <td style = "padding-left:1rem;"><%= typeof row.department !== 'undefined' ? row.department : '-' %></td>
                              <td style = "padding-left:1rem;"><%= typeof row.room_type !== 'undefined' ? row.room_type : '-' %></td>
                                </div>                   
                            </tr>

                            <% })%>
                            
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>

<%-include ("partials/footer")-%>