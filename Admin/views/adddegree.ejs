    <!-------Student Card----------->

            <div class = "student">
                <div class = "student-body">
                    <div class="student-head">
                        <div class = "general-h">
                            <h4 class = "general-title">Add Degrees Information</h4>
                        </div>
                    </div>

                <form class= "" action = "/degrees/adddegree" method = "post">
                    <div class = "row">

                        <div class = "add">
                            <label class = "add-input">Degree Level</label>
                            <select placeholder = "Select"name = "degreeLevel" class="form-control" required>
                                <option value="" disabled selected>Select</option>
                                <option value = "0">0 (Bachelor)</option>
                                <option value = "1">1 (Masters)</option>
                                <option value = "2">2 (PHD)</option>
                            </select>
                        </div>

                        <div class = "add">
                            <label class = "add-input">Degree Name</label>
                            <input name = "degreeName"type="text" placeholder="" class="form-control" autocomplete = "off" required>
                        </div>

                        <div class = "add">
                            <label class = "add-input">Abbreviation</label>
                            <input name = "degreeAbbr"type="text" placeholder="" class="form-control" autocomplete = "off" required>
                        </div>

                        <div class = "add">
                            <label class = "add-input">Department ID</label>
                            <select placeholder = "Select" name = "deptID" class = "form-control">
                                <option value="" disabled selected>Select</option>
                                 <% data.forEach(row => {%>
                                    <option value = "<%= row.id %>"><%= row.id %> (<%= row.name_abbreviation %>)</option>
                                 <% }); %>
                            </select> 
                        </div>
                    </div>
                </div>
            </div>

            <div class = "row">
                <div class = "add2">
                    <button type="submit" class="add2-btn">Submit</button>
                    <button type="reset" class="add2-btn1">Reset</button>
                </div>
            </div>

                </div>
            </form>
        </div>
    </div>

    

